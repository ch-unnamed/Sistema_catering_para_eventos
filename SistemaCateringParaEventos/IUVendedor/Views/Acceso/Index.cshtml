@model IUVendedor.Models.Usuario
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header">
                                    <h3 class="text-center font-weight-light my-4">Iniciar Sesión</h3>
                                </div>
                                <div class="card-body">

                                    @* Mensaje de error si login falla *@
                                    @if (ViewBag.Error != null)
                                    {
                                        <div class="alert alert-danger text-center">
                                            @ViewBag.Error
                                        </div>
                                    }

                                    @using (Html.BeginForm("Index", "Acceso", FormMethod.Post))
                                    {
                                        <div class="mb-3">
                                            <label for="inputEmail">Correo</label>
                                            <input class="form-control" id="inputEmail" type="email" name="Email" required />
                                        </div>
                                        <div class="mb-3">
                                            <label for="inputClave">Contraseña</label>
                                            <input class="form-control" id="inputClave" type="password" name="PasswordHash" required />
                                        </div>
                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <a class="small" href="#">¿Olvidó su contraseña?</a>
                                            <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; UPE 2025</div>
                        <div>
                            <a href="#">Política de privacidad</a>
                            &middot;
                            <a href="#">Términos y condiciones</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
