
@{
    ViewBag.Title = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<ol class="breadcrumb mb-4 mt-2">
    <li class="breadcrumb-item"><a href="./">Dashboard</a></li>
    <li class="breadcrumb-item active">Clientes</li>
</ol>
<div class="card">
    <div class="card-header">
        <i class="fa fa-users me-1"></i> Lista de Clientes
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success">Crear Nuevo</button>
            </div>
        </div>

        <hr />

        <table id="tabla" class="display cell-border" style="width:100%">
            <thead>
                <tr>
                    <th>DNI</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Email</th>
                    <th>Region</th>
                    <th>Telefono</th>
                    <th>Tipo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @* AJAX *@

            </tbody>
        </table>

    </div>
</div>

@* t0d0s los scripts son renderizados a layour, en la parte de RenderSection *@
@section Scripts {
    <script>
    var tabledata;

    jQuery.ajax({
        url: '@Url.Action("ListarClientes", "Home")',
        type: 'GET',
        dataType: 'json',
        contentType: 'application/json; charset=utf-8',
        success: function (data) {
            console.log(data)
        }
    })

        tabledata = $('#tabla').DataTable({ // convertir la tabla a dataTable de jquery en donde hay paginado, busqueda
            responsive: true, // para pantallas pequeñas
            ordening: false, // para que no ordene por defecto
            "ajax": {
                "url": '@Url.Action("ListarClientes", "Home")',
                "type": "GET",
                "datatype": "json"
            },  
            "columns": [
                { "data": "Dni" },
                { "data": "Nombre" },
                { "data": "Apellido" },
                { "data": "Email" },
                { "data": "Region" },
                { "data": "Telefono" },
                { "data": "Tipo" }, 
                {
                    "data": null,
                    "defaultContent": '<button class="btn btn-primary btn-sm"><i class="fas fa-pen"></i></button>' +
                        '<button class="btn btn-danger btn-sm ms-2"><i class="fas fa-trash"></i></button>',
                    "orderable": false, 
                    "searchable": false
                }
            ]
        });

    </script>
}