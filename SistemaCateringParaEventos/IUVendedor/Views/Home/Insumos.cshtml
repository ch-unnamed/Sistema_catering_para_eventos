
@{
    ViewBag.Title = "Insumos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-2">
    <li class="breadcrumb-item"><a href="./">Dashboard</a></li>
    <li class="breadcrumb-item active">Insumos</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fa fa-box"></i> Lista de Insumos
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModal(null)">Crear nuevo Insumo</button>
                <button type="button" class="btn btn-success" onclick="abrirModalNuevoLote(null)">Agregar nuevo Lote</button>
            </div>
        </div>

        <hr />

        <table id="tabla" class="display cell-border" style="width:100%">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Tipo</th>
                    <th>Unidades</th>
                    <th>Ver lotes</th> <!-- TODO agregar opcion para ver lotes del respectivo insumo -->
                </tr>
            </thead>
            <tbody>
                @* AJAX *@

            </tbody>
        </table>

    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-black text-white">
                <h5 class="modal-title" id="exampleModalLabel">Insumo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row g-2">

                    <div class="col-sm-6">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="nombre" autocomplete="off" required>
                        <div id="NombreError" class="alert alert-danger" role="alert">Error en el nombre ingresado</div>
                    </div>

                    <div class="col-sm-6">
                        <label for="cantidad" class="form-label">Cantidad</label>
                        <input type="number" class="form-control" id="cantidad" autocomplete="off" required>
                        <div id="CantidadError" class="alert alert-danger" role="alert">Error en la cantidad ingresada</div>
                    </div>

                    <div class="col-sm-6">
                        <label for="tipo" class="form-label">Tipo</label>
                        <input type="text" class="form-control" id="tipo" autocomplete="off" required>
                        <div id="TipoError" class="alert alert-danger" role="alert">Error en el tipo ingresado</div>
                    </div>

                </div>

                <div class="row mt-2">
                    <div class="col-12">
                        <div id="msjError" class="alert alert-danger" role="alert">
                            Error en los datos ingresados
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Nuevo Lote -->
<div class="modal fade" id="FormModalLote" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-black text-white">
                <h5 class="modal-title" id="exampleModalLabel">Lote</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row g-2">

                    <div class="col-sm-6">
                        <label for="nombre" class="form-label">Cantidad</label>
                        <input type="text" class="form-control" id="Cantidad" autocomplete="off" required>
                        <div id="CantidadLoteError" class="alert alert-danger" role="alert">Error en la cantidad ingresada</div>
                    </div>

                    <div class="col-sm-6">
                        <label for="codigoLote" class="form-label">Costo unitario</label>
                        <input type="number" class="form-control" id="codigoLote" autocomplete="off" required>
                        <div id="CostoError" class="alert alert-danger" role="alert">Error en el costo </div>
                    </div>

                    <div class="col-sm-6">
                        <label for="fechaIngreso" class="form-label">Fecha de ingreso</label>
                        <input type="date" class="form-control" id="fechaIngreso" autocomplete="off" required>
                        <div id="FechaIngresoError" class="alert alert-danger" role="alert">Error en la fecha ingresada</div>
                    </div>

                    <div class="col-sm-6">
                        <label for="fechaVencimiento" class="form-label">Fecha de vencimiento</label>
                        <input type="date" class="form-control" id="fechaVencimiento" autocomplete="off" required>
                        <div id="FechaVencimientoError" class="alert alert-danger" role="alert">Error en la fecha</div>
                    </div>

                </div>

                <div class="row mt-2">
                    <div class="col-12">
                        <div id="msjErrorLote" class="alert alert-danger" role="alert">
                            Error en los datos ingresados
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>

